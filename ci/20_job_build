#!/usr/bin/env python

"""
Build the job.
"""

import subprocess


print("")
print("[CLEAN]")
print("")

# Clean any previous build
subprocess.check_call(
    ["./clean"]
)

print("")
print("[CONFIGURE]")
print("")

# Run Premake
subprocess.check_call(
    ["./configure"]
)

print("")
print("[BUILDING HACTENGINE (RELEASE)]")
print("")

# Build
subprocess.check_call(
    ["./compile", "config=release"]
)

print("")
print("[BUILDING HACTENGINE (DEBUG)]")
print("")

# Build
subprocess.check_call(
    ["./compile", "config=debug"]
)

print("")
print("[DONE BUILDING]")
print("")
