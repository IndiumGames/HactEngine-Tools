#!/usr/bin/env python

#
# Build the job
#

import os
import subprocess
import sys


# Add Qt to path
os.environ["PATH"] = "/usr/local/Qt-5.4.1/bin:$PATH"

print("")
print("[BUILDING]")
print("")

# Run Premake
subprocess.check_call(
    ["./configure"]
)

# Build
subprocess.check_call(
    ["make", "-j8"]
)

print("")
print("[DONE BUILDING]")
print("")

